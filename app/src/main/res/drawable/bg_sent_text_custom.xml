<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- The shape for the main background -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/custom_green"/>
            <corners
                android:topLeftRadius="9dp"
                android:topRightRadius="9dp"
                android:bottomLeftRadius="9dp"/>
        </shape>
    </item>

    <!-- The custom shape with a pointed bottom right corner -->
    <item
        android:left="0dp"
        android:right="-1000dp"
        android:top="0dp"
        android:bottom="-1000dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <solid android:color="@color/custom_green"/>
            </shape>
        </rotate>
    </item>

</layer-list>
