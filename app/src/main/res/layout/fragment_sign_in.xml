<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/custom_green"
tools:context=".ui.onboarding.splashscreens.SignInFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/roomy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Roomy"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/login_directive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19sp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/login_directive"
            android:layout_marginStart="38dp"
            android:gravity="center"
            android:layout_marginEnd="39dp"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:hint="Email Address"
            android:textSize="16sp"
            android:maxLines="1"
            android:textColorHint="@color/hint_text_grey"
            android:paddingStart="17dp"
            android:paddingEnd="17dp"
            android:paddingTop="11dp"
            android:paddingBottom="9dp"
            android:letterSpacing="0.03"
            android:background="@drawable/bg_login_email"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:hint="Password"
            android:textSize="16sp"
            android:maxLines="1"
            android:textColorHint="@color/hint_text_grey"
            android:paddingStart="17dp"
            android:paddingEnd="17dp"
            android:paddingTop="11dp"
            android:paddingBottom="9dp"
            android:letterSpacing="0.03"
            android:background="@drawable/bg_login_password"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_check_circle"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/save_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c2c2c2"
                android:textSize="16sp"
                android:text="Save login info"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_btn"
            android:layout_marginTop="58dp"
            android:gravity="center"
            android:text="Log in "
            android:clickable="false"
            android:textSize="16sp"
            android:letterSpacing="0.03"
            android:textAllCaps="false"
            android:textColor="@color/custom_green"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCreateAcct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_btn"
            android:gravity="center"
            android:text="Create new account "
            android:clickable="false"
            android:textSize="16sp"
            android:letterSpacing="0.03"
            android:textAllCaps="false"
            android:textColor="#0A0909"
            android:layout_marginTop="11dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="Forgot Password"
            android:textColor="#040404"
            android:textSize="16dp"/>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
