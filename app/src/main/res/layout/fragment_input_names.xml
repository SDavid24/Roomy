<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.onboarding.signup.InputNamesFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/inputNamesToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        app:popupTheme="@style/Theme.Roomy.PopupOverlay" />

    <!--<com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/Theme.Roomy.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/input_email_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:popupTheme="@style/Theme.Roomy.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@id/inputNamesToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/signUpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:letterSpacing="0.02"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/signInText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or sign in"
            android:layout_marginTop="4dp"
            android:textAllCaps="false"
            android:textColor="#248E8B"
            android:letterSpacing="0.02"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/tvFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:layout_marginTop="6dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:letterSpacing="0.03"
            android:textSize="16sp"
            android:textStyle="normal"/>


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etFirstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="16sp"
            android:maxLines="1"
            android:textColorHint="@color/hint_text_grey"
            android:paddingStart="17dp"
            android:paddingEnd="17dp"
            android:paddingTop="11dp"
            android:paddingBottom="9dp"
            android:letterSpacing="0.03"
            android:background="@drawable/bg_grey"/>

        <TextView
            android:id="@+id/tvLastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:layout_marginTop="6dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:letterSpacing="0.03"
            android:textSize="16sp"
            android:textStyle="bold"/>


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etLastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="16sp"
            android:maxLines="1"
            android:textColorHint="@color/hint_text_grey"
            android:paddingStart="17dp"
            android:paddingEnd="17dp"
            android:paddingTop="11dp"
            android:paddingBottom="9dp"
            android:letterSpacing="0.03"
            android:background="@drawable/bg_grey"/>

        <TextView
            android:id="@+id/tvAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text= "@string/policy_agreement_message"
            android:textColor="@color/custom_green"
            android:textSize="12sp"
            android:letterSpacing="0.03"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:layout_marginTop="15dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/tvContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_faded_green_btn"
            android:layout_marginTop="58dp"
            android:gravity="center"
            android:text="Continue"
            android:clickable="false"
            android:textSize="24sp"
            android:letterSpacing="0.03"
            android:textAllCaps="false"
            android:textColor="@color/edit_text_bg_grey"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>