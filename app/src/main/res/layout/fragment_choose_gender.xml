<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context=".onboarding.ChooseGenderFragment">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/chooseGenderToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        app:popupTheme="@style/Theme.Roomy.PopupOverlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@id/chooseGenderToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:maxLines="1"
        android:text="Male"
        android:textStyle="bold"
        android:textColor="@color/hint_text_grey"
        android:paddingStart="17dp"
        android:paddingEnd="17dp"
        android:paddingTop="11dp"
        android:paddingBottom="9dp"
        android:letterSpacing="0.03"
        android:background="@drawable/bg_grey"/>

        <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFemale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:textSize="16sp"
        android:maxLines="1"
        android:text="Female"
        android:textStyle="bold"
        android:textColor="@color/hint_text_grey"
        android:paddingStart="17dp"
        android:paddingEnd="17dp"
        android:paddingTop="11dp"
        android:paddingBottom="9dp"
        android:letterSpacing="0.03"
        android:background="@drawable/bg_grey"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/tvContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_faded_green_btn"
            android:clickable="false"
            android:layout_marginTop="58dp"
            android:gravity="center"
            android:text="Continue"
            android:textSize="24sp"
            android:letterSpacing="0.03"
            android:textAllCaps="false"
            android:textColor="@color/edit_text_bg_grey"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>