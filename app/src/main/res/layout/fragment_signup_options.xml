<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_green"
    tools:context=".ui.onboarding.splashscreens.SignupOptionsFragment">

    <ImageView
        android:id="@+id/displayImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:src="@drawable/human_walking"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <LinearLayout
        android:id="@+id/llSignupOptions"
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:layout_gravity="bottom"
        android:paddingStart="17dp"
        android:paddingEnd="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_white_screen"
        >

        <View
            android:layout_width="45dp"
            android:layout_height="7dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_grey_view"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnJoinNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_green_btn"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:text="Join now"
            android:textSize="18sp"
            android:letterSpacing="0.03"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:icon="@drawable/ic_login"
            app:iconGravity="textStart"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnJoinWithApple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:background="@drawable/bg_white_and_green_stroke_btn"            android:layout_marginTop="17dp"
            android:gravity="center"
            android:text="Continue with Apple "
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@color/custom_green"
            android:letterSpacing="0.03"
            app:icon="@drawable/apple_logo"
            app:iconPadding="0dp"
            app:iconTint="@color/black"
            app:iconGravity="textStart"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnJoinWithGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:background="@drawable/bg_white_and_green_stroke_btn"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:text="Continue with Google"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:letterSpacing="0.03"
            app:iconTint="@null"
            android:textColor="@color/custom_green"
            app:icon="@drawable/google_logo"
            app:iconGravity="textStart"
            />







    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>