<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboarding.UploadFirstPhotosFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/uploadFirstPhotosToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        app:popupTheme="@style/Theme.Roomy.PopupOverlay" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/uploadFirstPhotosToolbar"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/almostThere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:lineSpacingExtra="-11dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:text="Almost there!"/>

        <TextView
            android:id="@+id/uploadMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/uploadMessage"
            android:textColor="@color/uploadPhoto_grey"
            android:textSize="14sp"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="46dp"
            android:letterSpacing="0.04"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="35dp"
            android:layout_marginStart="39dp"
            android:layout_marginEnd="39dp">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:background="@drawable/bg_faint_green">

                <ImageView
                    android:id="@+id/icAdd1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_add"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/addedImage1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="visible"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:gravity="center"
                android:background="@drawable/bg_faint_green">

                <ImageView
                    android:id="@+id/icAdd2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_add"
                    android:layout_gravity="center"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/addedImage2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_faint_green"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            >
            <TextView
                android:id="@+id/addFromFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add from Facebook"
                android:textColor="@color/black"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:layout_marginStart="15dp"
                android:layout_gravity=""
                android:textSize="13sp"
                android:letterSpacing="0.04"/>

            <ImageView
                android:id="@+id/fbLogo"
                android:layout_width="33.72dp"
                android:layout_height="33dp"
                android:background="@color/faint_green"
                android:layout_marginEnd="15.66dp"
                android:layout_gravity="center_vertical|end"
                android:visibility="visible"/>

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_faded_green_btn"
            android:layout_marginTop="20dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="17dp"
            android:gravity="center"
            android:text="Sign up"
            android:textSize="24sp"
            android:letterSpacing="0.03"
            android:textAllCaps="false"
            android:textColor="@color/edit_text_bg_grey"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>