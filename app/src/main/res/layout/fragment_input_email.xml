<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboarding.InputEmailFragment"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/input_email_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        app:popupTheme="@style/Theme.Roomy.PopupOverlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@id/input_email_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEmailQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What's Your E-mail Address?"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:letterSpacing="0.02"
            android:textSize="22dp"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:hint="Email Address"
            android:textSize="16sp"
            android:maxLines="1"
            android:textColorHint="@color/hint_text_grey"
            android:paddingStart="17dp"
            android:paddingEnd="17dp"
            android:paddingTop="11dp"
            android:paddingBottom="9dp"
            android:letterSpacing="0.03"
            android:background="@drawable/bg_grey"/>

        <TextView
            android:id="@+id/tvAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text= "@string/policy_agreement_message"
            android:textColor="@color/custom_green"
            android:textSize="12sp"
            android:letterSpacing="0.03"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:layout_marginTop="15dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_faded_green_btn"
            android:clickable="false"
            android:layout_marginTop="58dp"
            android:gravity="center"
            android:text="Continue"
            android:textSize="24sp"
            android:letterSpacing="0.03"
            android:textAllCaps="false"
            android:textColor="@color/edit_text_bg_grey"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>