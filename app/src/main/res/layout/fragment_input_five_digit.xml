<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboarding.InputFiveDigitFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/inputFiveDigitToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        app:popupTheme="@style/Theme.Roomy.PopupOverlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@id/inputFiveDigitToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fiveDigitCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5-Digit Code"
            android:textStyle=""
            android:textSize="24sp"
            android:textColor="@color/black"
            android:letterSpacing="0.02"
            >

        </TextView>

        <TextView
            android:id="@+id/pleaseEnter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pleaseEnterOtp"
            android:textSize="16sp"
            android:textColor="@color/custom_green"
            android:textStyle=""
            android:layout_marginStart="10dp"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="1sp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llDigit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etDigit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="5"
                    android:textSize="24sp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColorHint="@color/hint_text_grey"
                    android:background="#00000000"
                    android:textColor="@color/custom_green"/>


                <View
                    android:layout_width="37dp"
                    android:layout_height="3dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="4dp"
                    android:background="@color/custom_green"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDigit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etDigit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:gravity="center"
                    android:hint="4"
                    android:textSize="24sp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/custom_green"
                    android:textColorHint="@color/hint_text_grey" />

                <View
                    android:layout_width="37dp"
                    android:layout_height="3dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="4dp"
                    android:background="@color/custom_green"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llDigit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etDigit3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="0"
                    android:textSize="24sp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColorHint="@color/hint_text_grey"
                    android:background="#00000000"
                    android:textColor="@color/custom_green"/>


                <View
                    android:layout_width="37dp"
                    android:layout_height="3dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="4dp"
                    android:background="@color/custom_green"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llDigit4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etDigit4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:hint="5"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColorHint="@color/hint_text_grey"
                    android:background="#00000000"
                    android:textColor="@color/custom_green"/>


                <View
                    android:layout_width="37dp"
                    android:layout_height="3dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="4dp"
                    android:background="@color/custom_green"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llDigit5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etDigit5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:gravity="center"
                    android:hint="7"
                    android:textSize="24sp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/custom_green"
                    android:textColorHint="@color/hint_text_grey" />


                <View
                    android:layout_width="37dp"
                    android:layout_height="3dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="4dp"
                    android:background="@color/custom_green"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llDigit6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etDigit6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:gravity="center"
                    android:hint="7"
                    android:textSize="24sp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/custom_green"
                    android:textColorHint="@color/hint_text_grey" />

                <View
                    android:layout_width="37dp"
                    android:layout_height="3dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="4dp"
                    android:background="@color/custom_green"/>

            </LinearLayout>


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnVerify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="Verify"
            android:background="@drawable/bg_faded_green_btn"
            android:clickable="false"
            android:textSize="18sp"
            android:letterSpacing="0.03"
            android:textAllCaps="false"
            android:textColor="@color/white"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendCodeAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:background="@drawable/bg_white_and_green_stroke_btn"            android:layout_marginTop="17dp"
            android:gravity="center"
            android:text="Send code again"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@color/custom_green"
            android:letterSpacing="0.03"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirmByMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:background="@drawable/bg_white_and_green_stroke_btn"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:text="Confirm by Email"
            android:textSize="18sp"
            android:textStyle=""
            android:textAllCaps="false"
            android:letterSpacing="0.03"
            android:textColor="@color/custom_green"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>